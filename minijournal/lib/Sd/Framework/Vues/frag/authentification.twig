<!-- Modal One -->
<div class="modal">
    <input class="modal-open" id="modal-one" type="checkbox" hidden>
    <div class="modal-wrap" aria-hidden="true" role="dialog">
        <label class="modal-overlay" for="modal-one"></label>
        <div class="modal-dialog">
            <div class="modal-body">
                <label class="btn-close" for="modal-one" aria-hidden="true">×</label>
                {% if not est_connecte() %}
                    <form action="{{ request_uri() }}" method="post">
                        <div>
                            <label for="auth_login">Login</label>
                            <input type="text" id="auth_login" name="auth_login" value="" required/>
                        </div>
                        <div>
                            <label for="auth_password">Mot de passe</label>
                            <input type="password" id="auth_password" name="auth_password" value="" required/>
                        </div>
                        <button class="button" type="submit"><span>Connexion</span></button>
                    </form>
                {% else %}
                    <ul>
                        <li>Login : {{ global.session.login }}</li>
                        <li>Statut : {{ global.session.statut }}</li>
                    </ul>
                    <a class="button" href="index.php?action=deconnexion"><span>Déconnexion</span></a>
                {% endif %}
            </div>
        </div>
    </div>
</div>