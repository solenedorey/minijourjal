{% extends 'page.twig' %}

{% block titre %}
    Détail de l'image
{% endblock %}

{% block contenu %}
    <figure>
        <figcaption>
            <h2>{{ image.titre }}</h2>
            <h3>{{ image.auteur }}</h3>
            <p>Date de création : {{ image.dateCreation }}</p>
        </figcaption>
        <img src="{{ constant('IMAGE_BASEFILE')~image.fichier }}" alt="{{ image.titre }}">
    </figure>
    <h3><a href="index.php?objet=image&amp;action=afficherListe">Liste des images</a></h3>
{% endblock %}
